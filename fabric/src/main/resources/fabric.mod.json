{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${mod_description}",
    "authors": [ "${mod_author}" ],
    "contact": {
        "homepage": "https://github.com/Stein-N/Resource-Backpacks",
        "issues": "https://github.com/Stein-N/Resource-Backpacks/issues"
    },
    "license": "${mod_license}",
    "icon": "icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [ "net.xstopho.resource_backpacks.ResourceBackpacks" ],
        "client": [ "net.xstopho.resource_backpacks.ResourceBackpacksClient" ],
        "fabric-datagen": [ "net.xstopho.resource_backpacks.ResourceBackpacksDatagen" ],
        "shulkerboxtooltip": [ "net.xstopho.resource_backpacks.compat.shulkerboxtooltip.BackpackTooltipPlugin" ]
    },
    "mixins": [ "${mod_id}.mixins.json" ],
    "depends": {
        "fabric-api": "*",
        "fabricloader": "*",
        "minecraft": "${minecraft_version}",
        "java": "${java_version}",

        "resourceconfigapi": ">=${resource_config_api}",
        "resourcelibrary": ">=${resource_library}"
    },
    "suggests": {
        "shulkerboxtooltip": ">=${shulkerboxtooltip}"
    }
}